@model IEnumerable<StoreApp.Entity.Product>

<div class="widget">
    <h4>FEATURED</h4>

    <div class="products-list">

        @foreach (var item in Model)
        {
            <div class="media">
                <a class="media-left" href="/Product/Details/@item.ID">
                    <img alt="" class="img-responsive product-thumb" src="~/Images/Thumbnails/@item.Image">
                </a>
                <div class="media-body">
                    <a href="#" class="product-title">@item.Name</a>
                    <p class="product-price">$ @item.Price</p>
                </div>
            </div>
        }




    </div>

</div>

